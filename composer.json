{
    "name": "utopia-php/fetch",
    "description": "A simple library that provides an interface for making HTTP Requests.",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "laravel/pint": "^1.5.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "phpunit --verbose tests",
        "check": "./vendor/bin/phpstan analyse --level max src tests",
        "lint": "pint --test",
        "format": "pint"
    },
    "autoload": {
        "psr-4": {
            "Utopia\\Fetch\\": "src/"
        }
    },
    "authors": []
}